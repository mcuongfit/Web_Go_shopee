@model NETCKTEAM30.Models.HangHoa

@{
    ViewData["Title"] = "Details";
}
@{
    Layout = "_Admin";
}
<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        .mainmenu {
            margin-left: 20%;
        }

        table, tr, td {
            border: 1px solid black;
            border-collapse: collapse;
            background-color: white;
        }

        tr, td {
            padding: 10px;
        }
    </style>
</head>
<body>
    <h3 class="w3-bar-item w3-padding w3-white" style="width:100%; text-align: center">PRODUCTS</h3>
    <br />
    <br />
    <table class="mainmenu" style="width:800px">
        <tr>
            <td>Tên Sản Phẩm: </td>
            <td>@Html.DisplayFor(model => model.TenHh)</td>
        </tr>
        <tr>
            <td>Tên Loại: </td>
            <td>@Html.DisplayFor(model => model.Loai.TenLoai)</td>
        </tr>
        <tr>
            <td>Đơn Giá: </td>
            <td>@Html.DisplayFor(model => model.DonGia)</td>
        </tr>
        <tr>
            <td>Ảnh: </td>
            <td>
                <div style="width:auto;height:210px; ">
                    @foreach (var item in ViewBag.arr)
                    {
                        if (item != "")
                        {
                            <img style="width:220px;height:200px;float:left; padding:5px;" src="~/images/@item" class="img-thumbnail" alt="Cinque Terre" />

                        }
                    }
                </div>
            </td>
        </tr>
        <tr>
            <td>Nhà Cung Cấp: </td>
            <td>@Html.DisplayFor(model => model.NhaCungCap.TenNhaCc)</td>
        </tr>
        <tr>
            <td>Ngày Nhập: </td>
            <td> @Html.DisplayFor(model => model.NgayNhap)</td>
        </tr>
        <tr>
            <td>Mô Tả: </td>
            <td>@Html.DisplayFor(model => model.MoTa)</td>
        </tr>
        <tr>
            <td>Giảm Giá: </td>
            <td>@Html.DisplayFor(model => model.GiamGia)</td>
        </tr>
        <tr>
            <td>Lượt Mua: </td>
            <td>@Html.DisplayFor(model => model.LuotMua)</td>
        </tr>
    </table>
    <br />
    <br />
    <div class="mainmenu">
        <a asp-action="Edit" asp-route-id="@Model.HanghoaID" class="w3-bar-item w3-padding w3-pale-yellow w3-button">Sửa</a>
        <a asp-action="Delete" asp-route-id="@Model.HanghoaID" class="w3-bar-item w3-padding w3-pale-red w3-button">Xóa</a>
        <a asp-action="Index" class="w3-bar-item w3-padding w3-pale-blue w3-button">Trở Về</a>
    </div>
</body>