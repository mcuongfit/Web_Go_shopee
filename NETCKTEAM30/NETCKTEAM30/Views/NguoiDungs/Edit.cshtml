@model NETCKTEAM30.Models.NguoiDung

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "_Admin";
}
<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        .mainmenu {
            margin-left: 24%;
        }
    </style>
</head>
<body>
    <h3 class="w3-bar-item w3-padding w3-white" style="width:100%; text-align: center">ACCOUNTS</h3>
    <hr />
    <div class="row mainmenu">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NguoiDungID" />
                <div class="form-group">
                    Họ Tên
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Giới Tính
                    <select asp-for="GioiTinhID" class="form-control" asp-items="ViewBag.GioiTinhID"></select>
                    <span asp-validation-for="GioiTinhID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Ngày Sinh
                    <input asp-for="NgaySinh" class="form-control" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Địa Chỉ
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    SĐT
                    <input asp-for="SDT" class="form-control" />
                    <span asp-validation-for="SDT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Email
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Hình
                <dl>
                    <dd>
                        <div style="width:auto;height:210px; ">
                            @foreach (var item in ViewBag.arr)
                            {
                                if (item != "")
                                {
                                    <img style="width:220px;height:200px;float:left; padding:5px;" src="~/images/@item" class="img-thumbnail" alt="Cinque Terre" />

                                }
                            }
                        </div>
                    </dd>
                </dl>
                    Khác
                    <input type="file" name="myfile" multiple />
                    <span asp-validation-for="Hinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Loại Người dùng
                    <select asp-for="LoaiNgDungID" class="form-control" asp-items="ViewBag.LoaiNgDungID"></select>
                    <span asp-validation-for="LoaiNgDungID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Tên Đăng nhập
                    <input asp-for="TenDangNhap" class="form-control" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Mật Khẩu
                    <input asp-for="MatKhau" type="password" class="form-control" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="w3-bar-item w3-padding w3-pale-red" />
                    <a asp-action="Index" class="w3-bar-item w3-padding w3-pale-blue w3-button">Trở Về</a>
                </div>
            </form>
        </div>
    </div>
</body>
